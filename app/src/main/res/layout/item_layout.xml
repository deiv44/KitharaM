<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        android:background="@color/my_primary"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/Intrimage"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:src="@drawable/kitlogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/btnbeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="17sp"
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:text="Learn now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:text="Beginner"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/Intrimage"
            app:layout_constraintStart_toEndOf="@+id/Intrimage"
            app:layout_constraintTop_toTopOf="@+id/Intrimage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>